@model ReadBlogViewModel;
@using TechTales.Helpers;
@{
    ViewData["Title"] = "Blog";
}

<link rel="stylesheet" href="~/css/blog/blog.css">

<div>
    <div class="d-flex justify-content-between blog-sidepanel-container">
        <div class="blog-container flex-grow-1">
            <h1 class="text-center">@Model.Title</h1>
            <hr>
            <p class="text-justify" style="white-space: pre-line;">@Model.Content</p>
            @if (Model.Categories is not null && Model.Categories.Length != 0)
            {
                <p><span class="fw-bold">Categories: </span>@Model.Categories</p>
            }

            @if (Model.Tags is not null && Model.Tags.Length != 0)
            {
                <p><span class="fw-bold">Tags: </span>@Model.Tags</p>
            }
        </div>
        <div class="sidepanel">
            <ul>
                <li>
                    <a href="">Popular blogs</a>
                </li>
                <li>
                    <a href="">Categories</a>
                </li>
                <li>
                    <a href="">Tags</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="py-3 px-3 my-3 d-flex flex-grow-1" style="background-color: var(--pc);">
        <a asp-action="Detail" asp-controller="Profile" asp-route-id="@Model.Author.Id">
            <img class="user-img rounded-image" src="@Model.Author.Avatar" />
        </a>
        <div class="d-flex justify-content-center flex-column">
            <p class="m-0">
                <a asp-action="Detail" 
                    asp-controller="Profile" 
                    asp-route-id="@Model.Author.Id">
                    @Model.Author.UserName</a></p>
            <p class="m-0">@Model.CreationDate.ToString("dd/MM/yyyy HH:mm:ss")</p>
        </div>
    </div>
    <div class="comments-container" id="comments-section">
        <p class="fs-3">Comments</p>
        <ol class="comments-list">
            @foreach (var comment in Model.Comments)
            {
                <li style="background-color: var(--d9); transition: 0.3s ease;">
                    <div class="d-flex justify-content-between">
                        <div class="mb-3 d-flex flex-grow-1">
                            <a asp-action="Detail" asp-controller="Profile" asp-route-id="@comment.Author.Id">
                                <img class="user-img rounded-image" src="@comment.Author.Avatar" />
                            </a>
                            <div class="d-flex justify-content-center flex-column">
                                <p id="@comment.Author.Id" class="comment-author-id m-0">
                                    <a asp-action="Detail"
                                        asp-controller="Profile"
                                        asp-route-id="@comment.Author.Id">@comment.Author.UserName</a>
                                </p>
                                <p class="m-0">@comment.CreationDate.ToString("dd/MM/yyyy HH:mm:ss")</p>
                            </div>
                        </div>
                        @if (comment.IsSameUser)
                        {
                            @Html.EditBlogButtons(
                                editClass: "edit-comment-btn",
                                editFill: "green", 
                                deleteClass: "delete-comment-btn",
                                deleteFill: "red"
                            )
                        }
                    </div>
                    <p id="@comment.Id" class="comment-content text-break" style="white-space: pre-line">@comment.Content</p>
                    <div class="cancel-submit-comment-container text-end" hidden>
                        @Html.RoundedButton(
                            "Cancel", 
                            margin: "16px 8px 0 auto", 
                            @class: "cancel-comment-button"
                        )

                        @Html.RoundedButton(
                            "Submit", 
                            margin: "16px 0 0 auto", 
                            @class: "submit-comment-button"
                        )
                    </div>
                </li>
            }
        </ol>
        <div class="addcomment-container"">
            @if (Model.Reader is null)
            {
                <p class="text-center m-0 fst-italic text-muted">[To be able to comment
                    <a href="/Authorization/Signup">Create</a> an account or
                    <a href="/Authorization/Login">Log into</a> an existing one]
                </p>
            }
            else
            {
                <input type="hidden" name="BlogId" value="@Model.Id" />
                <input type="hidden" name="AuthorId" value="@Model.Author.Id" />
                
                <div class="d-flex justify-content-between">
                    <div class="commentator-avatar">
                        <a asp-action="Detail" asp-controller="Profile" asp-route-id="@Model.Reader.Id">
                            <img class="user-img rounded-image" src="@Model.Reader.Avatar" />
                        </a>
                    </div>
                    <textarea minlength="1" required name="Content" class="addcomment" type="text" placeholder="Add a comment..."></textarea>
                </div>
                @Html.RoundedButton(
                    "Leave a comment", 
                    margin: "16px 0 0 auto", 
                    @class: "add-comment-btn d-block"
                )
            }
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
<script src="~/js/blog/signalr.init.js"></script>
<script src="~/js/blog/blog.js"></script>