@model BlogViewModel;
@using TechTales.Helpers;
@using TechTales.Models.Blog;
@{
    ViewData["Title"] = $"Edit - '{Model.Title}'";
}

<form class="container p-4 rounded shadow-lg bg-light" asp-controller="Blog" asp-action="Edit" asp-route-id="@Model.Id" method="post" autocomplete="off">
    <div class="row g-4">
        <div>
            <h1 class="mb-4 text-break">Edit blog '@Model.Title'</h1>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input value="@Model.Title" asp-for="@Model.Title" class="outline-box-shadow form-control" type="text" placeholder="Title" aria-label="Title" required>
            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea rows="6" asp-for="@Model.Content" class="outline-box-shadow content-text-area form-control" placeholder="Content" aria-label="Content" required>@Model.Content</textarea>
            </div>
    
            <div class="mb-3">
                <div class="mb-3">
                    <label for="tags" class="form-label">Tags</label>
                    <input class="outline-box-shadow form-control" type="text" placeholder="#tag1 #tag2 etc..." aria-label="Tags" id="Tags" name="Tags" value="@Model.Tags">
                </div>
                <div class="mb-3">
                    <label for="categories" class="form-label">Categories</label>
                    <input class="outline-box-shadow form-control" type="text" placeholder="Category1, Category2 etc..." aria-label="Categories" id="Categories" name="Categories" value="@Model.Categories">
                </div>
            </div>
            <div class="visibility-radio-container">
                @if (Model.Visibility)
                {
                    <div class="mb-3 d-flex align-items-center">
                        <div class="d-inline-flex align-items-center">
                            <input class="checkbox-blueviolet" asp-for="@Model.Visibility" type="radio" name="visibility" value="true" checked />
                            <label class=" ps-2 fw-bold" for="Public">Public</label>
                        </div>
                        <span class="text-muted ps-1"> - Current blog state</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <input class="checkbox-blueviolet" asp-for="@Model.Visibility" type="radio" name="visibility" value="false" />
                        <label class=" ps-2 fw-bold" for="Private">Private</label>
                    </div>
                }
                else
                {
                    <div class="mb-3 d-flex align-items-center">
                        <input class="checkbox-blueviolet" asp-for="@Model.Visibility" type="radio" name="visibility" value="true" />
                        <label class=" ps-2 fw-bold" for="Public">Public</label>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="d-inline-flex align-items-center">
                            <input class="checkbox-blueviolet" asp-for="@Model.Visibility" type="radio" name="visibility" value="false" checked />
                            <label class=" ps-2 fw-bold" for="Private">Private</label>
                        </div>
                        <span class="text-muted ps-1"> - Current blog state</span>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary text-white px-4">Submit</button>
            </div>
            <input type="hidden" asp-for=AuthorId />
        </div>
    </div>
</form>