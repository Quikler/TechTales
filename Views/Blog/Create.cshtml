@using TechTales.Helpers;
@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/blog.css">

<div class="create-blog-container">
    <h1>Create a new blog</h1>
    <form asp-controller="Blog" asp-action="Create" method="post" autocomplete="off">
        <input type="text" placeholder="Title">
        <textarea name="" id="" placeholder="Content"></textarea>
        <div class="d-flex justify-content-between">
            <div class="visibility-radio-container">
                <div class="d-flex align-items-center">
                    <input type="radio" name="visibility" value="Public" checked />
                    <label class="ps-2 fw-bold" for="Public">Public</label>
                </div>
                <div class="d-flex align-items-center">
                    <input type="radio" name="visibility" value="Private" />
                    <label class="ps-2 fw-bold" for="Private">Private</label>
                </div>
            </div>
            <div>
                <input type="text" placeholder="Tags">
                <input type="text" placeholder="Categories">
            </div>
        </div>
        @Html.RoundedButton("Create blog")
    </form>
</div>