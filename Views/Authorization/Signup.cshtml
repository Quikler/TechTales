@model TechTales.Models.SignupViewModel;
@using TechTales.Helpers;
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/authorization/authorization.css" />

<div class="d-flex justify-content-center text-center">
    <div class="w-50 py-4 px-5 outline-border">
        <form asp-controller="Authorization" asp-action="Signup" method="post" autocomplete="off">
            <div class="text-center pb-5">
                <h1 class="">Welcome</h1>
                <img src="~/images/logo.jpg" alt="logo" width="200" />
            </div>
            <div class="fw-bold">

                <div class="mb-3">
                    <input asp-for="UserName" type="text" class="outline-box-shadow form-control" placeholder="Username" aria-label="Username" autocomplete="one-time-code" required>
                </div>

                <div class="mb-3">
                    <input asp-for="Email" type="email" class="outline-box-shadow form-control" placeholder="Email" aria-label="Email" autocomplete="one-time-code" required>
                </div>

                <div class="mb-3">
                    <input asp-for="Password" type="password" class="outline-box-shadow form-control" placeholder="Password" aria-label="Password" autocomplete="one-time-code" required>
                </div>

                <div class="mb-3">
                    <input asp-for="RepeatPassword" type="password" class="outline-box-shadow form-control" placeholder="Repeat password" aria-label="Repeat password" autocomplete="one-time-code" required>
                </div>

                @Html.ValidationSummary()
                
            </div>

            <button type="submit"
                    class="outline-box-shadow w-100 btn btn-dark my-3 ms-auto">Sign up</button>

            <p class="">
                Already have an account? <span><a href="Login" class="text-blueviolet">Log in</a></span>
            </p>
        </form>
    </div>
</div>

<script src="~/js/authorization.js" asp-append-version="true"></script>