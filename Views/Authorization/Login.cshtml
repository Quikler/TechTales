@model LoginViewModel;
@using TechTales.Helpers;
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/authorization/authorization.css" />

<div class="d-flex justify-content-center text-center">
    <div class="w-50 py-4 px-5 outline-border">
        <form asp-controller="Authorization" asp-action="Login" method="post" autocomplete="off">
            <div class="text-center pb-5">
                <h1 class="text-darkblue">Welcome</h1>
                <img src="~/images/logo.svg" alt="logo" width="200" />
            </div>
            <div class="fw-bold">

                <div class="mb-3">
                    <input asp-for=UserNameOrEmail type="text" class="outline-box-shadow form-control" placeholder="Username/Email" aria-label="Username/Email" required>
                </div>

                <div class="mb-3">
                    <input asp-for=Password type="password" class="outline-box-shadow form-control" placeholder="Password" aria-label="Password" required>
                </div>

                @* @Html.UnderlineInput(
                    type: "text", 
                    placeholder: "Username or Email", 
                    required: true, 
                    aspFor: "UserNameOrEmail")

                @Html.UnderlinePasswordInput(
                    placeholder: "Password", 
                    id: "input-password", 
                    required: true, 
                    eyeId: "eye-password", 
                    aspFor: "Password") *@
                
                @Html.ValidationSummary()

            </div>

            <p class="m-0 text-start">
                <a class="text-blueviolet" href="#">Forgot password?</a>
            </p>

            <button type="submit"
                    class="outline-box-shadow w-100 btn btn-dark my-3 ms-auto">Log in</button>

            <p class="text-darkblue">
                Don't have an account? <span><a href="Signup" class="text-blueviolet">Sign up</a></span>
            </p>
        </form>
    </div>
</div>

<script src="~/js/authorization.js" asp-append-version="true"></script>